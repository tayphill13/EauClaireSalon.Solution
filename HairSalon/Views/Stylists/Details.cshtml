@{
  Layout = "_Layout";
}

@using HairSalon.Models; 
@model HairSalon.Models.Stylist;
  

<h2>@Html.DisplayFor(model => model.Name) Stylists</h2>
<hr />


<ul>
@if (@Model.Clients.Count == 0)
{
  <p>nothing found</p>
}

@foreach (Client client in @Model.Clients)
{
  <li>@Html.ActionLink(@client.Name, "Details", "Stylists", new { id = client.ClientId})</li>
}
</ul>

<p>@Html.ActionLink("Add a client to this stylist", "Create", "Clients")</p>
