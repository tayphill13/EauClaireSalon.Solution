@{
  Layout = "_Layout";
}
@model HairSalon.Models.Stylists;

<h4>Add a new Stylist to the team</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {@class ="", required="required"})
  @Html.LabelFor(model => model.Specialty)
  @Html.TextBoxFor(model => model.Specialty, new {@class ="", required="required"})
  <input type="submit" value= "Add a new stylist" />
}


<p>@Html.ActionLink("Show all stylists", "Index")</p>