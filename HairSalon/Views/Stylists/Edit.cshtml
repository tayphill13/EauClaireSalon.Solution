@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist


<br>
<h3>Edit this Stylist: @Html.DisplayFor(model => model.Name)</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)
  @Html.LabelFor(model => model.Specialty)
  @Html.EditorFor(model => model.Specialty)
  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Stylists", "Index")</p>